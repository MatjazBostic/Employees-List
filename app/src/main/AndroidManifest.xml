<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mbostic.employeeslist">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mbostic.employeeslist.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mbostic.employeeslist.AddEmployeeActivity"
            android:label="@string/add_employee"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.mbostic.employeeslist.EmployeeProfileActivity"
            android:label="@string/employee_profile"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.mbostic.employeeslist.AnalyticsActivity"
            android:label="@string/analytics"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.mbostic.employeeslist.PublicProfileActivity"
            android:label="@string/public_profile"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>